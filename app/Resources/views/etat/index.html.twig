{% extends 'base.html.twig' %}

{% block body %}
    <h1>Etats list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Nometat</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for etat in etats %}
            <tr>
                <td><a href="{{ path('admin_gestion_etat_show', { 'id': etat.id }) }}">{{ etat.id }}</a></td>
                <td>{{ etat.nomEtat }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('admin_gestion_etat_show', { 'id': etat.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('admin_gestion_etat_edit', { 'id': etat.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('admin_gestion_etat_new') }}">Create a new etat</a>
        </li>
    </ul>
{% endblock %}
