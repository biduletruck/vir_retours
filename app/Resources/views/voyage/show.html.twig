{% extends 'base.html.twig' %}

{% block body %}
    <h1>Voyage</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ voyage.id }}</td>
            </tr>
            <tr>
                <th>Nomvoyage</th>
                <td>{{ voyage.nomVoyage }}</td>
            </tr>
            <tr>
                <th>Datecreation</th>
                <td>{% if voyage.dateCreation %}{{ voyage.dateCreation|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Dateretour</th>
                <td>{% if voyage.dateRetour %}{{ voyage.dateRetour|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{% if voyage.statut %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('voyage_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('voyage_edit', { 'id': voyage.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>

    <div class="row">
        <div class="col-md-12">
            <div class="col-md-6" id="liste_dispo">
                {% block colis %}
                    {% include ":voyage:colis_attente_retour.html.twig" %}
                {% endblock %}
            </div>
            <div class="col-md-6" id="liste_retour">
                <div class="col-md-12" id="add_retour">

                </div>
                <div class="col-md-12">
                    {% block liste_retour %}
                        {% include ":voyage:colis_en_cour_retour.html.twig" %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}


