{% block headerModel %}
    <h1>Détails DSA de la commande N° {{ gestionRetour.numeroSage }}
</div>
{% endblock %}
{% block bodyModel %}

    {{ form_start(edit_form) }}
<div class="row">
    <div class="col-xs-12 col-sm-12 col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Informations DSA</h3>
            </div>
            <div class="panel-body">
                <div class="col-xs-12 col-sm-12 col-md-12">
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        {{ form_label(edit_form.dateDemandeDsa) }}
                        {{ form_errors(edit_form.dateDemandeDsa) }}
                        {{ form_widget(edit_form.dateDemandeDsa) }}
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        {{ form_label(edit_form.dateReponseDemandeDsa) }}
                        {{ form_errors(edit_form.dateReponseDemandeDsa) }}
                        {{ form_widget(edit_form.dateReponseDemandeDsa) }}
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        {{ form_label(edit_form.numeroRaq) }}
                        {{ form_errors(edit_form.numeroRaq) }}
                        {{ form_widget(edit_form.numeroRaq) }}
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-3">
                        {{ form_label(edit_form.dateReceptionBonReprise) }}
                        {{ form_errors(edit_form.dateReceptionBonReprise) }}
                        {{ form_widget(edit_form.dateReceptionBonReprise) }}
                    </div>
                </div>
                <div class="col-xs-12 col-sm-12 col-md-12">
                    {{ form_label(edit_form.commentaire) }}
                    {{ form_errors(edit_form.commentaire) }}
                    {{ form_widget(edit_form.commentaire) }}
                </div>
            </div>
        </div>
    </div>
</div>
    {% block footerModal %}
        <button class="btn btn-success" ><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Valider</button>
    {% endblock %}
    {{ form_end(edit_form) }}
{% endblock %}

